/* pages/ucenter/order/order.wxss */
@import '../../cart/cart.wxss';
.order {
  background: #fff;
  position: fixed;
  top: 0;
  z-index: 10;
  width: 100%;
  height: 88rpx;
}

.list-block {
  position: relative;
  top: 100rpx;
  width: 100%;
  min-height: 100rpx;
}

.no-order {
  margin-top: 130rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.no-order .img {
  width: 100%;
  height: 380rpx;
  text-align: center;
}

.no-order .img image {
  width: 300rpx;
  height: 300rpx;
}

.no-order .txt {
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 38rpx;
  color: #bfbfbf;
  text-align: center;
}

.list {
  width: 100%;
  min-height: 310rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.list .item {
  width: 100%;
  min-height: 400rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-bottom: 15rpx;
  padding: 30rpx;
}

.list .item .head {
  width: 100%;
  height: 160rpx;
  line-height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 0.5rpx solid #e9eaec;
}

.list .item .content {
  width: 100%;
  height: 280rpx;
  display: flex;
  flex-direction: row;
  /* border-bottom: 0.5rpx solid #e9eaec; */
}

.list .item .content .check-box {
  width: 10%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.list .item .content .check-box image {
  width: 50rpx;
  height: 50rpx;
}

.list .item .content .img {
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.list .item .content .img image {
  width: 160rpx;
  height: 160rpx;
}
.list .item .imgs {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.list .item .imgs .more-img{
   width: 160rpx;
  height: 160rpx;
}
.list .item .imgs .more-img image{
   width: 160rpx;
  height: 160rpx;
}

.list .item .content .title {
  width: 60%;
  height: 100%;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: left;
  display: flex;
  align-items: center;
  font-size: 33rpx;
}

.font-color {
  color: #f00;
}
.list .item .order-no{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 188rpx;
  /* line-height: 68rpx; */
  border-top: 1rpx solid #e9eaec; 
  border-bottom: 1rpx solid #e9eaec;
  /* padding-top: 15rpx;
  padding-bottom: 15rpx; */
}

.list .item .foot{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.list .item .foot .book{
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #00a8ec;
  border-radius: 8rpx;
  color: #fff;
  margin-top: 20rpx;
}
/* .list .item .foot .all{
  text-align: right;
} */
.list .item .foot text{
  font-size: 38rpx;
  font-weight: bold;
}
.nodata {
  width: 100%;
  height: 180rpx;
}
