/* pages/booking/booking.wxss */
@import '../ucenter/index/index.wxss';

.type {
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  border-radius: 40rpx;
  width: 100%;
  height: 210rpx;
}

.type .item{
  width: 25%;
  height: 190rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.type .line{
  border-bottom: 5rpx solid #00a8ec; 
  width: 30%;
  /* padding-top: 10rpx; */
}

.type .item image{
  width: 80rpx;
  height: 80rpx;
}

.type .item text{
  color: #80848f;
  font-size: 32;
  /* padding-top: 15rpx; */
}

.content{
  background: #fff;
  width: 100%;
  min-height: 150rpx;
  margin-top: 30rpx;
  border-radius: 30rpx;
  margin-bottom: 120rpx;
}

.content .item{
  width: 100%;
  min-height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.content .item .item-main{
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #e9eaec;
}

.item-small{
  width: 20%;
  height: 100%;
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.item-small-check{
   width: 20%;
  height: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.item-small-check .check-price{
  color: #ff0000;
  font-size: 32rpx;
}
.item-small-check .no-car{
  color: #ff0000;
  font-size: 25rpx;
}

.item-small-check .check_box{
  width: 60rpx;
  height: 60rpx;
}

 

.item-small image{
  width: 100rpx;
  height: 100rpx;
border-radius: 10rpx;
}

.item-middel{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.item-middel .title{
  color: #1c2438;
  font-size: 33rpx;
  overflow:hidden;
text-overflow:ellipsis;
white-space:nowrap;
}

.item-middel .desc{
  color: #495060;
  font-size: 22rpx;
  word-break: break-all;
text-overflow: ellipsis;
display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
-webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
-webkit-line-clamp: 2; /** 显示的行数 **/
overflow: hidden; /** 隐藏超出的内容 **/

}

.item-sub{
  margin-top: 15rpx;
  width: 90%;
  min-height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border: 0.5rpx solid #00a8ec;
  border-radius: 30rpx;
}

.item-sub .sub-small{
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.item-sub .sub-small .icon{
  width: 60rpx;
  height: 60rpx;
}

.item-sub .sub-small .check_box{
  width: 60rpx;
  height: 60rpx;
}
.item-sub .sub-middle{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.item-sub .sub-middle .title{
  color: #1c2438;
  font-size: 35rpx;
}
.item-sub .sub-middle .price{
  color: #ed3f14;
  font-size: 36rpx;
}

.floot{
  background: #fff;
  z-index: 99;
  position: fixed;
  bottom: 0rpx;
  height: 110rpx;
  width: 100%;
  border-top: 1rpx solid #dddee1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.floot .price{
  width: 70%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.floot .price .txt{
  color: #1c2438;
  font-size: 38rpx;
}

.floot .price .money{
  color: #ed3f14;
  font-size: 38rpx;
}

.floot .btn{
  width: 30%;
  height: 100%;
  text-align: center;
  vertical-align: middle;
  line-height: 100rpx;
  background-color: #00a8ec;
  color: #fff;
  font-size: 38rpx;
}

.btn{
  border-radius: 0rpx;
}

.banner .car-info .enter{
  position: absolute;
  top: 40rpx;
  right: 20rpx;
  z-index: 10;
  color: #fff;
}