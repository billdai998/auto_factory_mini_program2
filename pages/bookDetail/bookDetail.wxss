/* pages/bookDetail/bookDetail.wxss */

.btn {
  position: fixed;
  z-index: 10;
  bottom: 0rpx;
  height: 140rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.btn .text {
  width: 70%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.btn .text .count{
  width: 30%;
  height: 100%;
  line-height: 130rpx;
  color: #000;
  font-size: 38rpx;
  text-align: center;
}
.btn .text .amount{
  width: 70%;
  height: 100%;
  line-height: 130rpx;
  color: #ed3f14;
  font-size: 36rpx;
  text-align: left;
}

.btn .pay {
  width: 30%;
  height: 100%;
  background-color: #00a8ec;
  color: #fff;
  line-height: 130rpx;
  font-size: 38rpx;
  text-align: center;
}

.block{
  background-color: #fff;
  margin-top: 30rpx;
  width: 98%;
  min-height: 180rpx;
  border-radius: 30rpx;
  box-shadow: 0rpx 3rpx 2rpx #888;
  color: #80848f;
}

.block .link{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 120rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: 33rpx;
  border-bottom: 1rpx solid #e9eaec;
}

.block .link .link-item{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  height: 100%;
}
.block .link .link-item input{
  border: 1rpx solid #00a8ec;
  height: 30rpx;
  border-radius: 12rpx;
  width: 260rpx;
}
.block .link .item{
  width: 50%;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  font-size: 33rpx;
}

.block .link .left{
  text-align: left;
  padding-left: 30rpx;
  
   display:-webkit-box;
word-break:break-all;
-webkit-box-orient:vertical;
-webkit-line-clamp:1;
overflow:hidden;
text-overflow:ellipsis;
}

.block .link .right{
  text-align: right;
  padding-right: 20rpx;
}
.block .link .time{
  font-size: 29rpx;
}

.block .car{
  padding-left: 30rpx;
  padding-bottom: 30rpx;
}

.block .store{
 display: flex;
  flex-direction: row;
  justify-content: left;
  padding-left: 30rpx;
  align-items: center;
  width: 100%;
  height: 120rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: 33rpx;
}
