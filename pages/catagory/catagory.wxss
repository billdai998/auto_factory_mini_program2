/* pages/catagory/catagory.wxss */

.catalog {
  flex: 1;
  width: 100%;
  background: #fff;
  display: flex;
  border-top: 1px solid #fafafa;
  height: 100%;
  margin-bottom: 130rpx;
}

.catalog .nav {
  width: 162rpx;
  height: 100%;
}

.catalog .nav .item {
  text-align: center;
  line-height: 90rpx;
  width: 162rpx;
  height: 90rpx;
  color: #333;
  font-size: 33rpx;
  border-left: 6rpx solid #fff;
}

.catalog .nav .item.active {
  color: #00a8ec;
  font-size: 36rpx;
  border-left: 4rpx solid #00a8ec;
}

.catalog .cate {
  border-left: 1px solid #fafafa;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
}

.cate .item {
  height: 210rpx;
  width: 100%;
  border-bottom: 1rpx solid #e9eaec;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding-bottom: 25rpx;
}

.cate .item .head {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 140rpx;
  color: #1c2438;
}

.cate .item  .item-logo {
  height: 110rpx;
  width: 25%;
  line-height: 110rpx;
  text-align: center;
}
.cate .item   .item-logo image{
  width: 80rpx;
  height: 80rpx;
}

.cate .item .head .title {
  height: 110rpx;
  width: 50%;
  font-size: 36rpx;
  line-height: 110rpx;
  line-clamp: 1;
  overflow: hidden;
  white-space:nowrap;
  text-overflow: ellipsis;

}

.cate .item .head .price {
  width: 25%;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 36rpx;
  color: #ed3f14;
  text-align: center;
}

.cate .item .foot {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  /* line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis; */
}

.cate .item .foot .desc {
  width: 75%;
  height: 100rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #80848f;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  overflow: hidden; /** 隐藏超出的内容 **/
}

.cate .item .foot .checkbox {
  width: 25%;
  height: 100rpx;
  line-height: 100rpx;
  vertical-align: middle;
  text-align: center;
}

.cate .item .foot image {
  width: 50rpx;
  height: 50rpx;
}

.floot {
  background: #fff;
  z-index: 99;
  position: fixed;
  bottom: 0rpx;
  height: 110rpx;
  width: 100%;
  border-top: 1rpx solid #dddee1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.floot .price {
  width: 70%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.floot .price .txt {
  color: #1c2438;
  font-size: 38rpx;
}

.floot .price .money {
  color: #ed3f14;
  font-size: 38rpx;
}

.floot .btn {
  width: 30%;
  height: 100%;
  text-align: center;
  vertical-align: middle;
  line-height: 100rpx;
  background-color: #00a8ec;
  color: #fff;
  font-size: 38rpx;
}
