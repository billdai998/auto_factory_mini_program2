/* pages/addCar/index/index.wxss */

.list {
  background-color: #fff;
}

.item-name {
  height: 36rpx;
  line-height: 36rpx;
  margin: 40rpx 0;
  text-align: center;
}

.divcolor {
  color: #f2f2f2 !important;
}

.sublist {
  display: flex;
  flex-direction: column;
}

.sublist .item {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 96rpx;
  padding-left: 30rpx;
}

.sublist .item image {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
  margin-right: 40rpx;
}

.sublist .item text {
  font-size: 32rpx;
  color: #333;
}

.hot {
  width: 100%;
  height: 146rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.hot .hot-item {
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.hot .hot-item image {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
}

.hot .hot-item text {
  font-size: 32rpx;
  color: #333;
}

.car-container {
  width: 85vw;
  height: 100vh;
  background: #fff;
  z-index: 2;
}

.serial-item {
  width: 100%;
  height: 140rpx;
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  padding-left: 30rpx;
  margin-bottom: 30rpx;
}

.serial-item image {
  width: 194rpx;
  height: 138rpx;
  vertical-align: middle;
  margin-left: 30rpx;
}

.serial-item text {
  font-size: 34rpx;
  color: #333;
  padding-left: 30rpx;
}



.view-bind {
  position: fixed;
  top: 0;
  left: 0px;
  width: 100vw;
  height: 100vh;
  z-index: 3;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
}

.view-bind .bind {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  /* padding-left: 40rpx;
  padding-right: 20rpx; */
  padding-top: 20rpx;
  flex-wrap: wrap;
  width: 90%;
  height: 40vh;
  border: solid 1rpx #dddee1;
  border-radius: 20rpx;
  box-shadow: 10rpx 10rpx 5rpx #888888;
}

.view-bind .bind .bind-num {
  border: solid 1rpx #dddee1;
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  margin-left: 10rpx;
}

.view-bind .divider{
  width: 90%;
}

.view-bind .bind-input{
  width: 90%;
  height: 110rpx;
  margin-top: 30rpx;
  border: solid 1rpx #dddee1;
  border-radius: 20rpx;
  box-shadow: 10rpx 10rpx 5rpx #888888;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.view-bind .bind-btn{
  width: 90%;
  height: 110rpx;
  margin-top: 30rpx;
}

.view-bind .bind-input .jian{
  height: 80rpx;
  line-height: 80rpx;
  vertical-align: middle;
  font-size: 38rpx;
  padding-right: 20rpx;
  color: #2d8cf0;
}
.view-bind .bind-input input{
  height: 80rpx;
  font-size: 38rpx;
  border: 1rpx solid #dddee1;
  border-radius: 20rpx;
  padding-left: 20rpx;
  color: #2d8cf0;
}
