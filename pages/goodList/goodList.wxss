/* pages/goodList/goodList.wxss */

.goods-list {
  width: 100%;
  min-height: 350rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: #fff;
}

.goods-list .item {
  width: 50%;
  height: 390rpx;
  border: 1rpx solid #f8f8f9;
}

.goods-list .item .img {
  width: 100%;
  height: 280rpx;
  text-align: center;
  vertical-align: middle;
  padding-top: 10rpx;
}

.goods-list .item .img image {
  width: 260rpx;
  height: 260rpx;
}

.goods-list .item .name {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  line-clamp: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  padding: 0 20rpx;
  font-size: 35rpx;
  color: #333;
}

.goods-list .item .price {
  width: 100%;
  height: 40rpx;
  text-align: center;
  font-size: 30rpx;
  color: #b4282d;
}

.nodata {
  width: 100%;
  height: 30rpx;
}
